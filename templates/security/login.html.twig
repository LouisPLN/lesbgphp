{% extends 'base.html.twig' %}

{% block body %}

<h1 class="display-4 text-center mt-2">Connexion</h1>

    <form action="{{ path('security_login') }}" method="post">
            
        <div class="form-group">
            <label for="_username">Email</label>
            <input type="text" name="_username" placeholder="Adresse email..." required>
        </div>

        <div class="form-group">
            <label for="_password">Mot de passe</label>
            <input type="password" name="_password" placeholder="Mot de passe..." required>
        </div>
        <input type="submit" value="Connexion">
    </form>





{% endblock %}