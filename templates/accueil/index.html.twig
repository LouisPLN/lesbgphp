{% extends 'base.html.twig' %}

{% block title %}Adoptoutou | Acceuil üê∂{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Bienvenue {{ last_username }}! ‚úÖ</h1>
</div>

<div id="container">

<div id="column-left">
{% for pet in pets %}

<h2> Nom :<a id='name-{{ pet.name }}'>{{ pet.name }} </a></h2>

<!--<p> Id : {{ pet.id }} </p>-->
<p> Type : {{ pet.type }} </p>
<p> Race : {{ pet.race }} </p>
<p> Adopt√© :
{% if (pet.state == 1) %}
    Oui
{% else %}  
    Non
{% endif %} 
</p>
<p><img class="pet-img" src="{{ pet.urlImg }}" alt="Image Pet" style="width:200px ; height:150px;"></p>

<hr>
{% endfor %}
</div>

<div class="column-right">
{% for product in products %}

<h2> Nom :<a id='name-{{product.id}}'>{{ product.name }} </a></h2>

<!--<p> Id : {{ product.id }} </p>-->
<p> Description : {{ product.description }} </p>
<p>Prix :<a id='price-{{product.id}}'>{{ product.price }} </a>‚Ç¨</p>
<p> Type de produit : {{ product.type }} </p>
<p> Stock : {{ product.stock }} </p>
<p><img class="pet-img" src="{{ product.urlImg }}" alt="Image Pet" style="width:250px ; height:150px;"></p>

<hr>
{% endfor %}
</div>

</div>
{% endblock %}
