    color: #303030;
}

.midPost {
    display: flex;
    align-items: center;
}

.midPost p {
    margin-bottom: 20px;
    font-size: 15px;
    color: #303030;
}

.bottomPost {
    display: flex;
    justify-content: flex-end;
    align-items: center;
