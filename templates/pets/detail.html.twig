        margin-bottom: 20px;
    }

    .cardPet small {
        margin-top: 5px;
        margin-right: 5px;
        font-size: 18px;
        color: grey;
    }

    .cardPet h3 {
        font-size: 25px;
        color: #303030;
    }


    .cardPet p {
        font-size: 18px;
        color: #303030;
        margin-bottom: 10px;
    }

    .cardPet img {
        width: 100%;
        border-radius: 4px;
        border: 2px solid #723647;
        margin-top: 10px;
        margin-bottom: 10px;
    }

    a.detail {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 15px 80px;
        font-size: 15px;
        text-align: center;
        border-radius: 4px;
        color: #fff;
        background-color: #723647;
        transition: border-color .4s, transform .4s, box-shadow .4s, -webkit-transform .4s;
    }

    a.detail:hover {
        box-shadow: 0 6px 12px -2px #723647;
        -webkit-transform: translate(0, -3px);
        -ms-transform: translate(0, -3px);
        transform: translate(0, -3px);
    }

    .button {
