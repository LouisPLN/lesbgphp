        {% if (pet.state == 1) %}
        
        {% else %}
        <a class="detail"> <button class="button" id="btn_adopt">ADOPTEZ LE</button></a>
        </div>
        <div id="form_adoption" style="display:none;">
            <form action="{{ path('pets_adopt',{ 'id' :pet.id} )}}" method="post">
                    <label for="mail">Votre mail‚ÄØ:</label>
                    <input class="text" type="email" id="mail" name="user_mail">

                    <input class="save" type="submit" id="valid" name="user_valid" value="ADOPTER L'ANIMAL">

            </form>
        </div>
        {% endif %}
        </p>

</div>

</main>

</div>
{% block javascripts %}

<script>
    document.getElementById("btn_adopt").onclick = function () {

        var y = document.getElementById("form_adoption");

        if (y.style.display === "none") {
            y.style.display = "block";
        } else {
            y.style.display = "none";
        }
    }
</script>

{% endblock %}

<style>
    body {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Rubik', sans-serif;
    }

    .container {
        background: #f1f1f1;
        min-height: 100vh;
        padding: 50px;
    }

    .container a {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 30%;
        margin: auto;
        padding: 15px 80px;
        font-size: 15px;
        text-align: center;
        border-radius: 4px;
        text-decoration: none;
        color: #fff;
        background-color: #723647;
        transition: border-color .4s, transform .4s, box-shadow .4s, -webkit-transform .4s;
    }

    .container a:hover {
        box-shadow: 0 6px 12px -2px #723647;
        -webkit-transform: translate(0, -3px);
        -ms-transform: translate(0, -3px);
        transform: translate(0, -3px);
    }

    main {
        margin: auto;
        width: 70%;
    }

    main h2 {
        text-align: center;
        font-size: 40px;
        color: #303030;
        margin-bottom: 50px
    }

    .section {
        display: flex;
        flex-flow: row wrap;
    }

    .cardPet {
        margin: auto;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        width: 500px !important;
        max-height: 800px;
        margin-top: 30px;
        padding: 30px;
        border-radius: 4px;
        border: 2px solid #303030;
        background: #fff;
