{% extends 'base.html.twig' %}

{% block title %}Adoptoutou | Animaux üê∂{% endblock %}

{% block body %}

<div class="container">
    <main>

        <h2>Animaux Adoptoutou üê∂</h2>

        {% if is_granted('ROLE_ADMIN') %}

        <a href="{{ path('pets_create') }}">AJOUTER UN ANIMAL</a>

        {% endif %}

        <div class="section">

            {% for pet in pets %}

            <div class="cardPet">

                <div class="titlePet"><small>Nom : </small><h3> {{ pet.name }}</h3></div>

                <p> R√©f√©rence : {{ pet.id }} </p>
                <p> Type : {{ pet.type }} </p>
                <p> Race : {{ pet.race }} </p>
                <p> Adopt√© :
                    {% if (pet.state == 1) %}
                    Oui
                    {% else %}
                    Non
                    {% endif %}
                </p>
                <img class="pet-img" src="{{ pet.urlImg }}" alt="Image Pet">

                <a class="detail" href="{{path('pets_id',{'id':pet.id})}}" name="btn_adopt">D√©tail</a>

            </div>

            {% endfor %}

        </div>
    </main>
</div>


<style>
    body {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Rubik', sans-serif;
    }

    .container {
        background: #f1f1f1;
        min-height: 100vh;
        padding: 50px;
    }

    .container a {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 30%;
        margin: auto;
        padding: 15px 80px;
        font-size: 15px;
        text-align: center;
        border-radius: 4px;
        text-decoration: none;
        color: #fff;
        background-color: #723647;
        transition: border-color .4s, transform .4s, box-shadow .4s, -webkit-transform .4s;
    }

    .container a:hover {
        box-shadow: 0 6px 12px -2px #723647;
        -webkit-transform: translate(0, -3px);
        -ms-transform: translate(0, -3px);
        transform: translate(0, -3px);
    }

    main {
        margin: auto;
        width: 70%;
    }

    main h2 {
        text-align: center;
        font-size: 40px;
        color: #303030;
        margin-bottom: 50px
    }

    .section {
        display: flex;
        flex-flow: row wrap;
    }

    .cardPet {
        margin: auto;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        width: 500px !important;
        max-height: 700px;
        margin-top: 30px;
        padding: 30px;
        border-radius: 4px;
        border: 2px solid #303030;
        background: #fff;
    }

    .cardPet .titlePet {
        display: flex;
        margin-bottom: 20px;
    }

    .cardPet small {
        margin-top: 5px;
        margin-right: 5px;
        font-size: 18px;
        color: grey;
    }

    .cardPet h3 {
        font-size: 25px;
        color: #303030;
    }
    
    .cardPet p {
        font-size: 18px;
        color: #303030;
        margin-bottom: 10px;
    }

    .cardPet img {
        max-width: 100%;
        max-height: 300px;
        border-radius: 4px;
        border: 2px solid #723647;
        margin-top: 10px;
        margin-bottom: 10px;
    }

    a.detail {
        padding: 15px 80px;
        font-size: 15px;
        text-align: center;
        border-radius: 4px;
        color: #fff;
        background-color: #723647;
        transition: border-color .4s, transform .4s, box-shadow .4s, -webkit-transform .4s;
    }

    a.detail:hover {
        box-shadow: 0 6px 12px -2px #723647;
        -webkit-transform: translate(0, -3px);
        -ms-transform: translate(0, -3px);
        transform: translate(0, -3px);
    }
</style>

{% endblock %}